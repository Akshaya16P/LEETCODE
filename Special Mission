#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int T;
    cin >> T;
    while(T--) {
        int N, C;
        cin >> N >> C;

        vector<int> A(N);
        for(int i = 0; i < N; i++) {
            cin >> A[i];
        }

        string S;
        cin >> S;

        int normal_sum = 0;
        int special_sum = 0;

        for(int i = 0; i < N; i++) {
            if(S[i] == '0') {
                normal_sum += A[i];
            } else {
                special_sum += A[i];
            }
        }

        if(normal_sum < C) {
            cout << normal_sum << "\n";
        } else {
            cout << max(normal_sum, normal_sum - C + special_sum) << "\n";
        }
    }

    return 0;
}
